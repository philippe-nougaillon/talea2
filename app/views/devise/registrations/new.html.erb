<div class="hero min-h-screen">
  <div class="flex flex-row flex-wrap gap-12 px-4 mt-8">
    <div class="mx-auto w-full lg:w-96">
      <div class="flex flex-col justify-center max-w-96 mx-auto">

        <div class="card shadow-2xl bg-base-100 p-8">

          <h1 class="text-2xl font-bold border-b border-gray-400 pb-4 w-full text-center my-8">Inscription</h1>

          <div class="w-full">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="field">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'input input-sm input-bordered w-full' %>
              </div>

              <div class="field">
                <%= f.label :password %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> caractères minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password", class:'input input-sm input-bordered w-full' %>
              </div>

              <div class="field">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'input input-sm input-bordered w-full' %>
              </div>

              <div class="actions">
                <%= f.submit "S'inscrire", class: 'btn btn-outline btn-success btn-lg w-full mt-4 mb-8' %>
              </div>
            <% end %>

          </div>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>

    <div class="mx-auto">
      <h1 class="text-4xl text-primary font-black">
        TALEA
      </h1>

      <h2 class="text-3xl mb-12">
        Application de gestion des Interventions
      </h2>

      <h3 class="text-xl text-secondary font-black my-6 max-w-full">
        Une fois votre compte 'Manager' créé, vous pourrez ajouter des comptes utilisateurs
        <br>
        pour vos Adhérents, Équipes et Agents.
      </h3>

      <h3 class="text-xl text-secondary font-black my-6 max-w-full">
        Vous avez une question, une remarque ou un projet à nous soumettre ?
        <br><br>
        <%= link_to "Nous contacter", "https://www.philnoug.com/contact?objet=TALEA", class: 'underline hover:text-primary' %>
      </h3>
    </div>
  </div>
</div>