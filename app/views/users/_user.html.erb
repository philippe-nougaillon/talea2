<tr id="<%= dom_id user %>" class="hover">
  <td class="text-2xl font-black">
    <%= user.avatar %>
    <%= link_to user.nom_prénom, user, class: 'hover:underline hover:text-base-content' %>
  </td>
  <td class="text-success"><%= user.rôle.upcase %> <%= "(#{user.service.humanize})" if user.service %> </td>
  <td class="text-primary"><%= user.email %></td>
</tr>
