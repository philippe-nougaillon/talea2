      <div class="card shadow-2xl bg-base-100 p-8">
        <h1 class="text-2xl font-bold border-b border-gray-400 pb-4 w-full text-center my-8">Connexion</h1>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'input input-sm input-bordered w-full', required: true %>
          </div>

          <div class="field my-4">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "current-password", class:'input input-sm input-bordered w-full', required: true %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "Se connecter", class: 'btn btn-outline btn-lg btn-primary w-full my-4' %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>

